<% layout("./layouts/boilerplate.ejs") -%>

    
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit this listing</h3> 
            <form method="POST"  class="needs-validation"  novalidate action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" value="<%=listing.title%>" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback">
                        Title looks good
                    </div>
                    <div class="invalid-feedback">
                        enter a valid title
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]"  cols="30" rows="10" required class="form-control"><%=listing.description%></textarea>
                <div class="invalid-feedback">
                    enter a valid description
                </div>
                </div>
                

                <div class="mb-3" style="display: flex;flex-direction: column;">
                    original listing image
                   <img src="<%=originalImageUrl%>" style="height: 8rem; width: 8rem;" >
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload new image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" required class="form-control">
                        <div class="invalid-feedback">
                            enter a valid country name
                        </div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="listing[price]" value="<%=listing.price%>" required  class="form-control">
                        <div class="invalid-feedback">
                            enter a valid price
                        </div>
                    </div>
                </div>

                
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%=listing.location%>" required class="form-control">
                    <div class="invalid-feedback">
                        enter a valid location
                    </div>
                </div>
                

                
                
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
                <br><br>
                
            </form>
        </div>
        
    </div>
    
   
